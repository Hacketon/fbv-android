<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFA500">

    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    
	    <TextView
	        android:id="@+id/tvCadUser"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Usuário"
	        android:textColor="#000000"
	    />
	    
	    <EditText 
	        android:id="@+id/edtCadUser"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:hint="Usuário"
	    	android:layout_below="@id/tvCadUser"
	    />
	    
	    <TextView 
	    	android:id="@+id/tvCadPasswd"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:text="Senha"
	    	android:layout_below="@id/edtCadUser"
	    	android:textColor="#000000"
	    />
	    
	    <EditText 
	    	android:id="@+id/edtCadPasswd"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:hint="Senha"
	    	android:layout_below="@id/tvCadPasswd"
	    />
	    
	    <EditText 
	    	android:id="@+id/edtCadPasswdCheck"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:hint="Verificar Senha"
	    	android:layout_below="@id/edtCadPasswd"    
	    />
	    
	    <Button
	        android:id="@+id/btnCadUser"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="Cadastrar-se"
	    	android:layout_alignParentRight="true"
	    	android:layout_below="@id/edtCadPasswdCheck"
	    />
	    
    </RelativeLayout>

</LinearLayout>